<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_homework"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b8"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="362dp"
        android:layout_height="43dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/scroll" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="Create a Homework"
        android:textColor="#4CAF50"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="314dp"
        android:layout_height="519dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="-50dp"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Class"
            android:textColor="#418E44"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/Instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Instructions"
            android:textColor="#418E44"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etInstruct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:inputType="textMultiLine"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/DueDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Due Date"
            android:textColor="#418E44"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etDue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:inputType="date"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Due Time"
            android:textColor="#418E44"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etDuet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:inputType="time"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius"
            android:fontFamily="sans-serif-condensed-medium"
            android:onClick="process6"
            android:text="Submit"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</FrameLayout>
