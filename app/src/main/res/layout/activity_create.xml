<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg7"
    android:backgroundTintMode="multiply"
    android:orientation="vertical"
    android:paddingLeft="45dp"
    android:paddingTop="30dp"
    android:paddingRight="45dp"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tvv"
        android:layout_width="308dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="@string/create_a_teacher"
        android:textColor="#DEFBDF"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="331dp"
        android:layout_height="542dp"
        android:layout_marginTop="28dp"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spCreateSection"
            android:layout_width="match_parent"
            android:layout_height="38dp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="320dp"
            android:layout_height="39dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="#C68BC34A"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/btnGenerate"
            android:layout_width="151dp"
            android:layout_height="38dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/positive"
            android:onClick="create"
            android:text="GENERATE"
            android:textColor="#FFFFFF"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etcUsername"
            android:layout_width="320dp"
            android:layout_height="39dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="#C68BC34A"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/etcPassword"
            android:layout_width="320dp"
            android:layout_height="39dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="#C68BC34A"
            android:hint="Password"
            android:inputType="text"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="320dp"
            android:layout_height="39dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="#C68BC34A"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etContact"
            android:layout_width="320dp"
            android:layout_height="39dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="#C68BC34A"
            android:ems="10"
            android:hint="Contact Number"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="320dp"
            android:layout_height="39dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="#C68BC34A"
            android:ems="10"
            android:hint="Address"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/tvValid"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-10dp"
            android:fontFamily="serif-monospace"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/negative"
                android:onClick="create"
                android:text="Cancel"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/radius"
                android:backgroundTint="#4CAF50"
                android:onClick="create"
                android:text="Save" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
